<!DOCTYPE html>
<html>
    <head>
        <title>
            <%=title %>
        </title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="../../monitor/views/css/layout.css" rel="stylesheet">
        <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css">
    </head>
    <body>
        <% for(var i in messages){ %>
            <div class="flash"> <%= messages[i] %></div>
        <% } %>
        <form action="/signup" method="post">
            <div>
                <label id="signupLabel">First Name : </label>
                <input type="text" name="firstName"/>
            </div>
            
            <div>
                <label id="signupLabel">Last Name : </label>
                <input type="text" name="lastName"/>
            </div>
            
            <div>
                <label id="signupLabel">Email : </label>
                <input type="text" name="email"/>
            </div>
            
            <div>
                <label id="signupLabel">User Name : </label>
                <input type="text" name="username"/>
            </div>
            
            <div>
                <label id="signupLabel">Password : </label>
                <input type="text" name="password"/>
            </div>

            <div>
                <label id="signupLabel">Monitor Sensor : </label>
                <input type="text" name="monitorSensor"/>
            </div>

            <div>
                <label id="signupLabel">Monitor Actuator : </label>
                <input type="text" name="monitorActuator"/>
            </div>

            <div>
                <label id="signupLabel">Control : </label>
                <input type="text" name="control"/>
            </div>

            <div>
                <label id="signupLabel">Control key : </label>
                <input type="text" name="controlKey"/>
            </div>
            
            <div>
                <input class="btn btn-default" type="submit" value="Sign Up"/>
            </div>
        
        </form>
    </body>
</html>